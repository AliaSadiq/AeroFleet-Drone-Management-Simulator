{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Drone Fleet",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "main.cpp",
        "Drone.cpp",
        "FleetManager.cpp",
        "SurveillanceDrone.cpp",
        "AttackDrone.cpp",
        "-o",
        "drone-fleet.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Builds the Drone Fleet Management System"
    }
  ]
}
